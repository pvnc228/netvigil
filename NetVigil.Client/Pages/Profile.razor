@page "/profile"
@inject IJSRuntime JSRuntime

<div style="max-width: 600px;">
    <h2>User Profile</h2>

    <div class="card">
        <div style="display:flex; align-items:center; gap: 20px; margin-bottom: 30px;">
            <div style="width: 80px; height: 80px; background: var(--accent-blue); border-radius: 50%; display:flex; align-items:center; justify-content:center; font-size: 2rem; font-weight:bold; color:white;">
                A
            </div>
            <div>
                <h3 style="margin:0;">Administrator</h3>
                <div style="color: var(--text-secondary);">SecOps Lead • admin@netvigil.local</div>
            </div>
        </div>

        <h4 style="border-bottom: 1px solid var(--border-color); padding-bottom: 10px;">Interface Settings</h4>

        <div style="margin-top: 20px; display:flex; flex-direction:column; gap: 20px;">

            <div style="display:flex; justify-content:space-between; align-items:center;">
                <div>
                    <div style="font-weight:600;">Interface Theme</div>
                    <div style="font-size:0.85rem; color:var(--text-secondary);">Switch between Cyber-Dark and Corporate-Light</div>
                </div>
                <button class="btn-primary" @onclick="ToggleTheme" style="background: var(--bg-dark); border: 1px solid var(--border-color);">
                    @(isLightMode ? "🌙 Switch to Dark" : "☀ Switch to Light")
                </button>
            </div>

            <div style="display:flex; justify-content:space-between; align-items:center;">
                <div>
                    <div style="font-weight:600;">Language</div>
                    <div style="font-size:0.85rem; color:var(--text-secondary);">System language region</div>
                </div>
                <select style="padding: 8px; border-radius: 6px; background: var(--bg-dark); color: var(--text-primary); border: 1px solid var(--border-color);">
                    <option>English (US)</option>
                    <option>Russian (RU)</option>
                    <option>German (DE)</option>
                </select>
            </div>

        </div>
    </div>
</div>

@code {
    private bool isLightMode = false;

    private async Task ToggleTheme()
    {
        isLightMode = !isLightMode;
        if (isLightMode)
            await JSRuntime.InvokeVoidAsync("eval", "document.body.classList.add('light-mode')");
        else
            await JSRuntime.InvokeVoidAsync("eval", "document.body.classList.remove('light-mode')");
    }
}