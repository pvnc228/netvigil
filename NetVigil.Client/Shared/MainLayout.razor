@inherits LayoutComponentBase
@inject NetVigil.Client.Services.AppState AppState

<div class="page">
    <NavMenu />

    <main style="position: relative; display: flex; flex-direction: column;">
        @if (AppState.IsDemoMode)
        {
            <div style="background: repeating-linear-gradient(45deg, #7f1d1d, #7f1d1d 10px, #991b1b 10px, #991b1b 20px); color: white; text-align: center; font-weight: bold; font-size: 0.8rem; padding: 5px; border-bottom: 2px solid #ef4444; letter-spacing: 2px;">
                ⚠ DEMO ENVIRONMENT ACTIVATED ⚠
            </div>
        }

        <div style="flex: 1; padding: 2rem; overflow-y: auto;">
            @Body
        </div>
    </main>
</div>

@code {
    protected override void OnInitialized()
    {
        AppState.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        AppState.OnChange -= StateHasChanged;
    }
}